<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewGameState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="It is player one's turn"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bggrid"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:alignmentMode="alignBounds"
        app:columnCount="3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewGameState"
        app:rowCount="3"
        app:useDefaultMargins="true">

        <ImageView
            android:id="@+id/imgViewPos00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:onClick="isClicked"
            android:tag="0" />

        <ImageView
            android:id="@+id/imgViewPos01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:onClick="isClicked"
            android:tag="1" />

        <ImageView
            android:id="@+id/imgViewPos02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:onClick="isClicked"
            android:tag="2" />

        <ImageView
            android:id="@+id/imgViewPos10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:onClick="isClicked"
            android:tag="3" />

        <ImageView
            android:id="@+id/imgViewPos11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:onClick="isClicked"
            android:tag="4" />

        <ImageView
            android:id="@+id/imgViewPos12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:onClick="isClicked"
            android:tag="5" />

        <ImageView
            android:id="@+id/imgViewPos20"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:onClick="isClicked"
            android:tag="6" />

        <ImageView
            android:id="@+id/imgViewPos21"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:onClick="isClicked"
            android:tag="7" />

        <ImageView
            android:id="@+id/imgViewPos22"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:onClick="isClicked"
            android:tag="8" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:onClick="buttonClicked"
        android:text="Start new game"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/txtViewDivisionIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:alpha=".45"
        android:text="2021 DivisionIO (Ingo MÃ¶ller)"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>